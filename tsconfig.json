{
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": [
      "ES2020",
      "ESNext"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "es2020",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "outDir": "build",
    "declarationDir": "build/types",
    "strict": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "jsx": "react"
  },
  "include": [
    "src/**/*",
    "./typings",
    "projects/**/*",
    "api"
  ],
  "exclude": [
    "node_modules",
    "src/**/__test__",
    "projects/**/__test__"
  ]
}
