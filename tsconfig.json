{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "es2015", "esnext", "dom"],
    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "outDir": "build",
    "declarationDir": "build/types",
    "strict": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./typings"],
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "./typings"],
  "exclude": ["node_modules"]
}
